import sys
import os.path

try:
	import _preambule
except ImportError:
	sys.exc_clear()

if __name__ == "__main__":
	import devparrot
	config = devparrot.core.configLoader.init()
	devparrot.core.session.init(config)
	devparrot.core.ui.init()
	devparrot.core.modules.load()
	devparrot.core.command.load()
	devparrot.core.configLoader.load()


	if len(sys.argv) > 1:
		pathes = sys.argv[1:]
#		devparrot.core.commandLauncher.run_command("open %s"%" ".join([p for p in pathes if os.path.exists(p)]))
		devparrot.core.session.commandLauncher.run_command("open %s"%" ".join(['"%s"'%p for p in pathes]))
	devparrot.core.ui.window.mainloop()

