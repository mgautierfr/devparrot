
window = Section()
window.height = 600
window.width = 800

binds["<Control-s>"] = "save"
binds["<Control-n>"] = "new"
binds["<Control-o>"] = "open"
binds["<F3>"] = "search"
binds["<Alt-F3>"] = "bsearch"
binds["<Control-x>"] = "cut"
binds["<Control-c>"] = "copy"
binds["<Control-v>"] = "paste"

textView = Section()
textView.auto_indent = True
textView.tab_width = 4
textView.draw_spaces = 0
textView.space_indent = False
textView.highlight_current_line = True
textView.show_line_numbers = True
textView.smart_home_end = True
textView.font = "monospace"

color = Section()
color.notFoundColor =  "red"
color.okColor = "#BBFFBB"
color.errorColor = "#FF9999"
color.highlight_tag_color = "#FFFFBB"
color.search_tag_color = "#FFAAAA"
color.currentLine_tag_color = "#EEEEEE"

